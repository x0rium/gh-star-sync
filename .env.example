# .env.example

# 1. Database connection string
# Example for PostgreSQL:
DATABASE_URL="postgresql://user:password@localhost:5432/gh_star_sync?schema=public"

# 2. GitHub Personal Access Token (PAT) with 'repo' scope
GITHUB_TOKEN="ghp_xxxxxxxxxxxxxxxxxxxxx"

# 3. The GitHub username whose stars you want to sync
GITHUB_USERNAME="your-github-username"

# 4. Application Port
PORT=3000

# 5. Feature Flags
ENABLE_SYNC_ON_BOOT=true
ENABLE_SYNC_CRON=true
METRICS_ENABLED=true

# 6. Cron Schedule for GitHub Star Sync
# (uses standard cron syntax)
CRON_SCHEDULE="*/5 * * * *"